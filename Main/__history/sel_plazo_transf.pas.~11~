  Fsel_plazo_transf: TFsel_plazo_transf;

implementation

{$R *.dfm}
 uses main, transferencias;
procedure TFsel_plazo_transf.AdvSmoothButton1Click(Sender: TObject);
begin
 FTransferencias.Qtransfplazoid.Value:=Qplazosplazoid.Value;
 FTransferencias.Qplazos.Close;
 FTransferencias.Qplazos.ParamByName('plazo').Value:=Qplazosplazoid.Value;
 FTransferencias.Qplazos.ExecSQL;
 FTransferencias.Qplazos.Open;
 close;
end;

procedure TFsel_plazo_transf.AdvSmoothButton2Click(Sender: TObject);
begin
Close;
end;

procedure TFsel_plazo_transf.FormCreate(Sender: TObject);
begin
Qplazos.Open;
end;

end.
