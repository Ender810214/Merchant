{$R *.dfm}

procedure TFsel_prod_prefact.AdvSmoothButton1Click(Sender: TObject);
begin
Fprod_prefact.Qprod_prefactproductoid.Value:=UniQuery1productoid.Value;
Fprod_prefact.Qprod_prefactcodigo.Value:=UniQuery1codigo.Value;
