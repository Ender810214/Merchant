  object Qcontratos: TUniQuery
    SQLInsert.Strings = (
      'INSERT INTO contratos'
      
        '  (contratoid, clienteid, tipo, fecha_inicio, fecha_vencimiento,' +
        ' estado, monto_general, monto_cuc, monto_cup, codigo)'
      'VALUES'
      
        '  (:contratoid, :clienteid, :tipo, :fecha_inicio, :fecha_vencimi' +
        'ento, :estado, :monto_general, :monto_cuc, :monto_cup, :codigo)')
    SQLDelete.Strings = (
      'DELETE FROM contratos'
      'WHERE'
      '  contratoid = :Old_contratoid AND clienteid = :Old_clienteid')
    SQLUpdate.Strings = (
      'UPDATE contratos'
      'SET'
      
        '  contratoid = :contratoid, clienteid = :clienteid, tipo = :tipo' +
        ', fecha_inicio = :fecha_inicio, fecha_vencimiento = :fecha_venci' +
        'miento, estado = :estado, monto_general = :monto_general, monto_' +
        'cuc = :monto_cuc, monto_cup = :monto_cup, codigo = :codigo'
      'WHERE'
      '  contratoid = :Old_contratoid AND clienteid = :Old_clienteid')
    SQLRefresh.Strings = (
      
        'SELECT contratoid, clienteid, tipo, fecha_inicio, fecha_vencimie' +
        'nto, estado, monto_general, monto_cuc, monto_cup, codigo FROM co' +
        'ntratos'
      'WHERE'
      '  contratoid = :contratoid AND clienteid = :clienteid')
    Connection = Fmain.UniConnection1
    SQL.Strings = (
