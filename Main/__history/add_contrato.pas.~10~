unit add_contrato;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, CurvyControls, cxGraphics, cxControls,
  cxLookAndFeels, cxLookAndFeelPainters, cxStyles, dxSkinsCore,
  dxSkinsDefaultPainters, cxCustomData, cxFilter, cxData, cxDataStorage, cxEdit,
  cxNavigator, dxDateRanges,
  cxDataControllerConditionalFormattingRulesManagerDialog, Data.DB, cxDBData,
  cxGridLevel, cxClasses, cxGridCustomView, cxGridCustomTableView,
  cxGridTableView, cxGridDBTableView, cxGrid, MemDS, DBAccess, Uni,
  AdvSmoothButton;

type
  Tfadd_contrato = class(TForm)
    CurvyPanel1: TCurvyPanel;
    CurvyPanel2: TCurvyPanel;
    cxGrid1DBTableView1: TcxGridDBTableView;
    cxGrid1Level1: TcxGridLevel;
    cxGrid1: TcxGrid;
    Qcontratos: TUniQuery;
    Qcontratosfecha_inicio: TDateField;
    Qcontratosfecha_vencimiento: TDateField;
    Qcontratosestado: TStringField;
    Qcontratoscodigo: TStringField;
    Qcontratoscontratoid: TIntegerField;
    Qcontratosclienteid: TIntegerField;
    DataSource1: TDataSource;
    AdvSmoothButton1: TAdvSmoothButton;
    AdvSmoothButton2: TAdvSmoothButton;
    cxGrid1DBTableView1codigo: TcxGridDBColumn;
    cxGrid1DBTableView1fecha_inicio: TcxGridDBColumn;
    cxGrid1DBTableView1fecha_vencimiento: TcxGridDBColumn;
    cxGrid1DBTableView1estado: TcxGridDBColumn;
    procedure FormCreate(Sender: TObject);
    procedure AdvSmoothButton1Click(Sender: TObject);
    procedure AdvSmoothButton2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  fadd_contrato: Tfadd_contrato;

implementation

{$R *.dfm}
  uses main,despacho, add_despacho;
procedure Tfadd_contrato.AdvSmoothButton1Click(Sender: TObject);
begin
FDespacho.QDespachocontratoid.Value:=Qcontratoscontratoid.Value;
Fadd_despacho.JvDBComboEdit2.Text:=inttostr(Qcontratoscontratoid.Value);
Close;
end;

procedure Tfadd_contrato.AdvSmoothButton2Click(Sender: TObject);
begin
Close;
end;

procedure Tfadd_contrato.FormCreate(Sender: TObject);
begin
Qcontratos.ParamByName('clienteid').Value:=FDespacho.QDespachoclienteid.Value;
Qcontratos.ExecSQL;
Qcontratos.Open;
end;

end.
