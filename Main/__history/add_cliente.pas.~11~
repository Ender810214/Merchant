    AdvSmoothButton2: TAdvSmoothButton;
    procedure AdvSmoothButton1Click(Sender: TObject);
    procedure AdvSmoothButton2Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Fadd_cliente: TFadd_cliente;

implementation

{$R *.dfm}
 uses main, despacho,add_despacho;
procedure TFadd_cliente.AdvSmoothButton1Click(Sender: TObject);
begin
FDespacho.QDespachoclienteid.Value:=QClientesclienteid.Value;
Fadd_despacho.JvDBComboEdit1.Text:=inttostr(QClientesclienteid.Value);
Close;
end;

procedure TFadd_cliente.AdvSmoothButton2Click(Sender: TObject);
begin
Close;
end;

procedure TFadd_cliente.FormCreate(Sender: TObject);
begin
QClientes.ExecSQL;
QClientes.Open;
end;

end.
