unit reportes;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, frxClass, frxDBSet, ReportManager,
  JvExControls, JvGradient, Vcl.ExtCtrls, JvExExtCtrls, JvExtComponent,
  JvScrollMax, Data.DB, MemDS, DBAccess, Uni, AdvSmoothButton,
   frxChBox,   frxExportPDF,
  frxDesgnCtrls,frxDesgn, frxExportXLS, frxDCtrl, frxExportBaseDialog,
  frxDACComponents, frxUniDACComponents, frxExportXLSX, frxExportPPTX;

type
  TFreportes = class(TForm)
    JvGradient1: TJvGradient;
    UniStoredProc1: TUniStoredProc;
    UniStoredProc1out_proveedor: TMemoField;
    UniStoredProc1out_prov: TMemoField;
    UniStoredProc1out_contratoid: TMemoField;
    UniStoredProc1out_formap: TMemoField;
    UniStoredProc1out_tipoc: TMemoField;
    UniStoredProc1fecha_contratacion: TDateField;
    UniStoredProc1fecha_espiracion: TDateField;
    UniStoredProc1out_montog: TFloatField;
    UniStoredProc1out_montocuc: TFloatField;
    UniStoredProc1out_montocup: TFloatField;
    AdvSmoothButton1: TAdvSmoothButton;
    ReportManager1: TReportManager;
    JvScrollMax1: TJvScrollMax;
    frxReport1: TfrxReport;
    frxDialogControls1: TfrxDialogControls;
    frxPPTXExport1: TfrxPPTXExport;
    frxXLSXExport1: TfrxXLSXExport;
    frxUniDACComponents1: TfrxUniDACComponents;
    frxPDFExport1: TfrxPDFExport;
        procedure FormShow(Sender: TObject);
    procedure AdvSmoothButton1Click(Sender: TObject);
    procedure JvScrollMax1StartDrag(Sender: TObject;
      var DragObject: TDragObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Freportes: TFreportes;

implementation
   uses main;
{$R *.dfm}

procedure TFreportes.AdvSmoothButton1Click(Sender: TObject);
begin
ReportManager1.ShowReport;
end;

procedure TFreportes.FormShow(Sender: TObject);
begin
ReportManager1.ReportsPath:=ExtractFilePath(Application.ExeName)+'Reportes';
ReportManager1.LoadReports;

end;

procedure TFreportes.JvScrollMax1StartDrag(Sender: TObject;
  var DragObject: TDragObject);
begin
JvScrollMax1.Bands[0].Font.Name:='Tahoma';
JvScrollMax1.Bands[0].Font.size:=14;
end;

end.
