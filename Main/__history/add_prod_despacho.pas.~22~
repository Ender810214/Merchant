{$R *.dfm}
 uses main,add_producto,despacho;
procedure TFadd_prod.FormCreate(Sender: TObject);
begin
Qprod_despacho.ParamByName('ordenid').Value:=FDespacho.QDespachoordenid.Value;
Qprod_despacho.ExecSQL;
Qprod_despacho.Open;



end;

procedure TFadd_prod.JvDBComboEdit1ButtonClick(Sender: TObject);
begin
  Fadd_producto:=TFadd_producto.Create(Application);
  Fadd_producto.ShowModal;
end;

procedure TFadd_prod.Qprod_despachoNewRecord(DataSet: TDataSet);
begin
  Qprod_despachoordenid.Value:=FDespacho.QDespachoordenid.Value;
end;

end.
