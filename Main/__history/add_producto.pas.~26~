{$R *.dfm}
 uses main, add_prod_despacho,despacho;
procedure TFadd_producto.AdvSmoothButton1Click(Sender: TObject);
begin
//Fadd_prod.JvDBComboEdit1.Text:=Qproductocodigo_producto.Value;
Fadd_prod.Qprod_despachoproductoid.Value:=Qproductocodigo_producto.Value;


Close;
end;

procedure TFadd_producto.AdvSmoothButton2Click(Sender: TObject);
begin
close;
end;

procedure TFadd_producto.FormCreate(Sender: TObject);
begin
Qproducto.ParamByName('clienteid').Value:=FDespacho.QDespachoclienteid.Value;
Qproducto.ParamByName('contratoid').Value:=FDespacho.QDespachocontratoid.Value;
Qproducto.ExecSQL;
Qproducto.Open;
end;

