implementation
   uses main;
{$R *.dfm}

procedure TFCierres.AdvSmoothButton1Click(Sender: TObject);
begin
if QCierresEstado.Value='En Proceso' then
 begin
  if MessageDlg('Se creará una toma del periodo solicitado, esta seguro de continuar?',mtConfirmation,mbYesNo,0)=mryes then
  begin
    QCierres.Edit;
    QCierresEstado.Value:='Terminado';
    UniStoredProc1.ParamByName('in_fecha1').Value:=cxDBDateEdit1.Date;
    UniStoredProc1.ParamByName('in_fecha2').Value:=cxDBDateEdit2.Date;
    UniStoredProc1.ExecProc;

  end;

 end;
end;


end.
