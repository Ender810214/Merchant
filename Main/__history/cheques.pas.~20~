{$R *.dfm}
 uses main;
procedure TFcheques.AdvGlassButton1Click(Sender: TObject);
begin
if QPagosregistrado.Value='N' then
begin
Qpagos.Edit;
Qpagosregistrado.Value:='S';
Qpagos.post;

end
else
ShowMessage('El Registro seleccionado ya esta registrado.')

end;

