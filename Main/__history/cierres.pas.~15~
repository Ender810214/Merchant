unit cierres;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, MemDS, DBAccess, Uni,
  CurvyControls, cxGraphics, cxControls, cxLookAndFeels, cxLookAndFeelPainters,
  cxContainer, cxEdit, cxDBEdit, cxDropDownEdit, cxCalendar, cxTextEdit,
  cxMaskEdit, cxSpinEdit, Vcl.StdCtrls, cxNavigator, cxDBNavigator, cxStyles,
  cxCustomData, cxFilter, cxData, cxDataStorage, dxDateRanges, cxDBData,
  cxGridCustomTableView, cxGridTableView, cxGridDBTableView, cxGridLevel,
  cxClasses, cxGridCustomView, cxGrid, cxLabel, cxDBLabel, AdvSmoothButton,
  frxClass,  Vcl.ExtCtrls, frxDACComponents, frxUniDACComponents;

type
  TFCierres = class(TForm)
    CurvyPanel1: TCurvyPanel;
    CurvyPanel2: TCurvyPanel;
    QCierres: TUniQuery;
    QCierrescierreid: TIntegerField;
    QCierresfecha1: TDateField;
    QCierresfecha2: TDateField;
    QCierresEstado: TStringField;
    QCierresdescripcion: TStringField;
    DataSource1: TDataSource;
    Label1: TLabel;
    Label2: TLabel;
    cxDBDateEdit1: TcxDBDateEdit;
    Label3: TLabel;
    cxDBDateEdit2: TcxDBDateEdit;
    Label4: TLabel;
    cxDBTextEdit1: TcxDBTextEdit;
    Label5: TLabel;
    cxDBNavigator1: TcxDBNavigator;
    cxGrid1DBTableView1: TcxGridDBTableView;
    cxGrid1Level1: TcxGridLevel;
    cxGrid1: TcxGrid;
    cxGrid1DBTableView1cierreid: TcxGridDBColumn;
    cxGrid1DBTableView1fecha1: TcxGridDBColumn;
    cxGrid1DBTableView1fecha2: TcxGridDBColumn;
    cxGrid1DBTableView1Estado: TcxGridDBColumn;
    cxGrid1DBTableView1descripcion: TcxGridDBColumn;
    cxDBLabel1: TcxDBLabel;
    AdvSmoothButton1: TAdvSmoothButton;
    UniStoredProc1: TUniStoredProc;
    cxDBLabel2: TcxDBLabel;
    frxReport1: TfrxReport;
    AdvSmoothButton2: TAdvSmoothButton;
    frxUniDACComponents1: TfrxUniDACComponents;
    procedure AdvSmoothButton1Click(Sender: TObject);
    procedure AdvSmoothButton2Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure QCierresBeforeDelete(DataSet: TDataSet);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FCierres: TFCierres;

implementation
   uses main;
{$R *.dfm}

procedure TFCierres.AdvSmoothButton1Click(Sender: TObject);
begin
if QCierresEstado.Value='En Proceso' then
 begin
  if MessageDlg('Se creará una toma del periodo solicitado, esta seguro de continuar?',mtConfirmation,mbYesNo,0)=mryes then
  begin
    QCierres.Edit;
    QCierresEstado.Value:='Terminado';
    UniStoredProc1.ParamByName('in_fecha1').Value:=cxDBDateEdit1.Date;
    UniStoredProc1.ParamByName('in_fecha2').Value:=cxDBDateEdit2.Date;
    UniStoredProc1.ParamByName('in_cierre').Value:=QCierrescierreid.Value;

    UniStoredProc1.ExecProc;
    Qcierres.Post;

  end;

 end;
end;


procedure TFCierres.AdvSmoothButton2Click(Sender: TObject);
begin
frxReport1.LoadFromFile(ExtractFilePath(Application.ExeName)+'\reportes\Rep_cierres_existencias_preriodo.fr3');
frxReport1.ShowReport();
end;

procedure TFCierres.FormCreate(Sender: TObject);
begin
QCierres.Open;
end;

procedure TFCierres.QCierresBeforeDelete(DataSet: TDataSet);
begin
if QCierresEstado.Value='Terminado' then
ShowMessage('No puede borrar un cierre TERMINADO, Consulte al Administrador del Sistema');
QCierres.Cancel;
end;

end.
